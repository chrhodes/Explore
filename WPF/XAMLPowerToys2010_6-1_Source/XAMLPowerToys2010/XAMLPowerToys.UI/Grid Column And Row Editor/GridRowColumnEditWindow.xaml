<Window 
    x:Class="GridRowColumnEditWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Grid Row-Column Editor" SizeToContent="WidthAndHeight" WindowStyle="ToolWindow">

    <StackPanel>
        <TextBlock Text="Grid Row-Column Editor" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <TextBlock Margin="0,10,0,15" Foreground="Gray" Text="Right click on cells" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <Grid x:Name="gridLayout"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button FontSize="10" Margin="0,0,10,0" Content="Create" Click="btnCreate_Click" />
            <Button FontSize="10" Content="Cancel" Click="btnCancel_Click" />
        </StackPanel>
    </StackPanel>

</Window>
