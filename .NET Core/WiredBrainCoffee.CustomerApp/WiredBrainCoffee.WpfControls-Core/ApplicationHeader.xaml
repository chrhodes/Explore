<UserControl x:Class="WiredBrainCoffee.WpfControls.ApplicationHeader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Name="_root">
  <StackPanel Grid.ColumnSpan="3" Orientation="Horizontal">
    <Image Source="Images/logo.png" Height="90" Margin="5"/>
    <TextBlock Text="{Binding ElementName=_root,Path=ApplicationTitle}" 
                 FontSize="30"
                 FontWeight="ExtraBold" 
                 Foreground="White"
                 VerticalAlignment="Bottom"
                 Margin="20"/>
    <TextBlock Text="{Binding ElementName=_root,Path=Version}" 
                 Foreground="#333333"
                 VerticalAlignment="Bottom"
                 Margin="0 0 0 25"/>
  </StackPanel>
</UserControl>
