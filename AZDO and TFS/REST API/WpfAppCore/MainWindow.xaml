<Window x:Class="WpfAppCore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppCore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ObjectDataProvider x:Key="oAvailableCollections" 
                            ObjectType="{x:Type local:AvailableCollectionsData}" 
                            MethodName="GetCollections"/>
        <local:AvailableCollectionsData2 x:Key="oAvailableCollections2" />
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Label Content="CB1 {Binding AvailableCollections)" />
            <ComboBox x:Name="CB1"
                ItemsSource="{Binding AvailableCollections}"
                      DisplayMemberPath="Key"
                      SelectedValuePath="Value"
                      SelectionChanged="OnSelectedCollectionChanged">

                <!--DisplayMemberPath="Value.Uri" >-->
                <!--DisplayMemberPath="Value.Uri"
                SelectedValuePath="Value.Uri"
                SelectedValue="{Binding SelectedCollection}"-->
            </ComboBox>
            <TextBox x:Name="TB1" Text="{Binding SelectedCollection.Uri }" />
            <TextBox x:Name="TB2" Text="{Binding SelectedCollection.PAT }" />
            <!--Cannot Do this as no binding to Member Variables.  Must be Property-->
            <Label Content="CB2 {Binding Fruits}" />
            <ComboBox x:Name="CB2"
                ItemsSource="{Binding Fruits}" >
            </ComboBox>
            
            <!--This works because FruitsP is a Property-->
            <Label Content="CB3 {Binding FruitsP}" />
            <ComboBox x:Name="CB3"
                ItemsSource="{Binding FruitsP}" >
            </ComboBox>
            
            <Label Content="CB4 {Binding Source={StaticResource oAvailableCollections}}"/>
            <ComboBox x:Name="CB4"
                ItemsSource="{Binding Source={StaticResource oAvailableCollections}}" DisplayMemberPath="Key" >
            </ComboBox>

            <Label Content="CB5 {Binding Source={StaticResource oAvailableCollections2}}" />
            <ComboBox  x:Name="CB5"
                ItemsSource="{Binding Source={StaticResource oAvailableCollections2}}" DisplayMemberPath="Key" >
            </ComboBox>

            <Label Content="CB6 {StaticResource oAvailableCollections2}" />
            <ComboBox x:Name="CB6"
                ItemsSource="{StaticResource oAvailableCollections2}" DisplayMemberPath="Key"  >
            </ComboBox>
            
            <Label Content="CB7 {StaticResource oAvailableCollections2}" />
            <ComboBox x:Name="CB7"
                ItemsSource="{StaticResource oAvailableCollections2}" SelectedValuePath="Key" DisplayMemberPath="Value">
            </ComboBox>
            
            <Label Content="CB8 {StaticResource oAvailableCollections2}" />
            <ComboBox x:Name="CB8"
                ItemsSource="{StaticResource oAvailableCollections2}" SelectedValuePath="Key" DisplayMemberPath="Key">
            </ComboBox>
            
            <Label Content="CB9 {StaticResource oAvailableCollections2}" />
            <ComboBox x:Name="CB9"
                ItemsSource="{StaticResource oAvailableCollections2}" SelectedValuePath="Key" DisplayMemberPath="Key" SelectedValue="{Binding ColllectionDetails.Uri}">
            </ComboBox>

            <Button Click="GetProjects_Click">GetProjects</Button>
            <Button Click="GetProcessList_Click">Get Process List</Button>
            <Button Click="SampleREST_Click">SampleREST</Button>
            <Button Click="PersonalAccessToken_Click">PersonalAccessToken</Button>
            <Button Click="MicrosoftAccount_Click">MicrosoftAccount</Button>
            <Button Click="OAuth_Click">OAuth</Button>
            <Button Click="AzureActiveDirectory_Click">AzureActiveDirectory</Button>

            <TextBlock TextWrapping="Wrap" Name="result" />
        </StackPanel>
    </Grid>
</Window>
